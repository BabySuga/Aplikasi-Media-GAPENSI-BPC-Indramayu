<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/gambarImageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/gambar_pengumuman"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/judulTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tanggalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/isiTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_samar"
        android:textSize="@dimen/text_size_large" />

    <Button
        android:id="@+id/btnSelengkapnya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selengkapnya"
        android:textSize="@dimen/text_size_small"/>
</LinearLayout>